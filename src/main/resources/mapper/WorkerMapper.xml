<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gang.lu.riskmanagementproject.mapper.WorkerMapper">

    <!-- 1. 公共BasePOResultMap：所有子类共享的父字段映射 -->
    <resultMap id="BasePOResultMap" type="gang.lu.riskmanagementproject.domain.po.BasePO">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 2. Worker自身的ResultMap：继承公共映射，只写子类字段 -->
    <resultMap id="BaseResultMap" type="gang.lu.riskmanagementproject.domain.po.Worker"
               extends="gang.lu.riskmanagementproject.mapper.WorkerMapper.BasePOResultMap">
        <result column="worker_code" property="workerCode"/>
        <result column="name" property="name"/>
        <result column="position" property="position"/>
        <result column="work_years" property="workYears"/>
        <result column="work_type" property="workType"/>
        <result column="status" property="status"/>
    </resultMap>

</mapper>
